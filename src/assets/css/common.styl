.article {
    margin: 48px 0 32px;
    font-size: 24px;
}

.link-list,
.card {
    display: inline-block;
    position: relative;
    width: 612px;
    min-height: 64px;
    padding: 12px 24px 12px 76px;
    margin-bottom: 12px;
    font-size: 16px;
    font-weight: bold;
    border-radius: 12px;
    box-shadow: none;
    box-sizing: border-box;
    transition: box-shadow 0.25s ease 0s;
}
.link-list:hover,
.card {
    box-shadow: 0px 4px 24px rgba(0,0,0,0.08);
}
.link-list::before {
    content: '';
    position: absolute;
    top: 12px;
    left: 24px;
    width: 40px;
    height: 40px;
    background-color: #FEBF1B;
    border-radius: 12px;
}
.card {
    width: 200px;
    padding: 16px;
    margin: 0 16px 32px 0;
    border-radius: 16px;
}
.card:hover {
    box-shadow: none;
}
.card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 16px;
}
.card p {
    margin-top: 16px;
    font-size: 20px;
    font-weight: normal;
}